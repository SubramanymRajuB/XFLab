        <Label Text="&#xf247;" FontFamily="FontAwesome" FontSize="50" HorizontalTextAlignment="Center" />
        <Label Text="&#xf0f4;" FontFamily="FA-S" FontSize="50" HorizontalTextAlignment="Center" />
    </StackLayout>
</ContentPage>
