<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FormsGallery.XamlExamples.RectangleDemoPage"
             Title="Rectangle Demo">
    <StackLayout>
        <Label Text="Rectangle"
               FontSize="50"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Rectangle Fill="Red"
                   WidthRequest="150"
                   HeightRequest="50"
                   HorizontalOptions="Center" />


        <Rectangle Stroke="Red"
                   StrokeThickness="4"
                   WidthRequest="150"
                   HeightRequest="150"
                   HorizontalOptions="Center" />
        <Rectangle Fill="Blue"
           Stroke="Black"
           StrokeThickness="3"
           RadiusX="50"
           RadiusY="10"
           WidthRequest="200"
           HeightRequest="100"
           HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
