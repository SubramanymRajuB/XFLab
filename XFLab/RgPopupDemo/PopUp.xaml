<?xml version="1.0" encoding="utf-8"?>
<popup:PopupPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XFLab.PopUp">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="0" Margin="0">
<Frame WidthRequest="270" HeightRequest="300" Padding="15">
      <StackLayout> 
          <Image Source = "PopupLogo.png" WidthRequest="70" HeightRequest="80" />
           <Label Text ="Name:" />
           <Entry x:Name="txtFName" Placeholder="Write your first name" />
             <Label Text ="Last name:" />
           <Entry x:Name="txtLName" Placeholder="Write your last name" />
            <Button Margin="0,10,0,0" Text="Send" BackgroundColor="#1094a1"
                    HeightRequest="35" TextColor="White" Clicked="BtnSend"/>
      </StackLayout>
    </Frame> 
  </StackLayout>
</popup:PopupPage>